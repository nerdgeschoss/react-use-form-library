{
  "name": "react-use-form-library",
  "version": "1.0.2",
  "description": "A simple form library using react hooks",
  "main": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.{tsx,ts,css,scss,json,yml}\"",
    "lint": "yarn lint:types && yarn lint:style",
    "lint:types": "tsc --noEmit",
    "lint:style": "eslint src/**/*.{tsx,ts} --max-warnings 0",
    "test:ci": "jest --coverage",
    "test": "jest --watchAll",
    "watch": "rimraf dist && tsc -w",
    "release": "yarn build && yarn version --patch && git push --tags && yarn publish --non-interactive"
  },
  "author": "Leo Gonzalez",
  "license": "ISC",
  "dependencies": {
    "lodash.isempty": "^4.4.0"
  },
  "devDependencies": {
    "@nerdgeschoss/config": "^0.0.5",
    "@types/jest": "^25.2.1",
    "@types/lodash.isempty": "^4.4.6",
    "@types/react": "^16.9.34",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  }
}
